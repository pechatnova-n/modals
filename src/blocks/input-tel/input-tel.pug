mixin input-tel(mods)
  -
    const baseName = 'input-tel'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '_' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .input-tel(class=allMods)&attributes(attributes)
    input.input-tel__input#inp-tel(type="tel", required)
    label.input-tel__label(for="inp-tel") телефон
      span.input-tel__star *
    span.input-tel__inp-reset
      +inp-reset
